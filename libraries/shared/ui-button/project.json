        "jestConfig": "libraries/shared/ui-button/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libraries/shared/ui-button/**/*.ts",
          "libraries/shared/ui-button/**/*.html"
        ]
      }
    }
  },
  "tags": [
    "scope:shared", "type:ui"
  ]
}
